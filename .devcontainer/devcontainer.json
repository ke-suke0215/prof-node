{
  "name": "ProfNodeDevelopment",
  "build": {
    "dockerfile": "Dockerfile"
  },

  "mounts": [
    "source=${localEnv:HOME}/.ssh,target=/home/node/.ssh,type=bind,readonly",
    "source=node-modules-cache,target=/workspace/node_modules,type=volume",
    "source=npm-cache,target=/home/node/.npm,type=volume"
  ],

  "customizations": {
    "vscode": {
      "extensions": [
        "ms-vscode.vscode-typescript-next",
        "bradlc.vscode-tailwindcss",
        "esbenp.prettier-vscode",
        "ms-vscode.vscode-json",
        "formulahendry.auto-rename-tag",
        "christian-kohler.path-intellisense",
        "dbaeumer.vscode-eslint",
        "ms-playwright.playwright"
      ],
      "settings": {
        "editor.formatOnSave": true,
        "editor.defaultFormatter": "esbenp.prettier-vscode",
        "editor.codeActionsOnSave": {
          "source.eslint.fixAll": "explicit"
        },
        "typescript.preferences.importModuleSpecifier": "relative",
        "emmet.includeLanguages": {
          "javascript": "javascriptreact",
          "typescript": "typescriptreact"
        }
      }
    }
  },

  "features": {
    "ghcr.io/devcontainers/features/github-cli:1": {}
  },

  "runArgs": ["--memory=4g", "--cpus=2"],

  "forwardPorts": [5173, 8787],
  "portsAttributes": {
    "5173": {
      "label": "Vite Dev Server",
      "onAutoForward": "notify"
    },
    "8787": {
      "label": "Wrangler Dev Server",
      "onAutoForward": "notify"
    }
  },

  "postCreateCommand": [
    "npm install",
    "chmod 600 ~/.ssh/* 2>/dev/null || true",
    "cp ${localEnv:HOME}/.gitconfig /home/node/.gitconfig 2>/dev/null || true"
  ],
  "postStartCommand": "npm run cf-typegen",

  "remoteUser": "node",
  "updateContentCommand": "npm install",
  "workspaceMount": "source=${localWorkspaceFolder},target=/workspace,type=bind",
  "workspaceFolder": "/workspace"
}
